{
  "version": "1.0.1",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "packages": ["packages/*"],
  "changelog": {
    "labels": {
      "feat": ":feat: 新功能",
      "fix": ":fix: 修复bug",
      "docs": ":doc: 文档",
      "style": ":style: 样式修改",
      "refactor": ":refactor: 功能重构",
      "chore": "chore: 构建过程或辅助工具的变动"
    }
  }
}
